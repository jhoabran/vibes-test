generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") 
}

model Product {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  price        Float
  isAvailable  Boolean  @default(true)
  category     String
  image        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}